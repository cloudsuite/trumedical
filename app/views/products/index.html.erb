<h1>Listing products</h1>

<table>
  <tr>
    <th>Tms part number</th>
    <th>Category</th>
    <th>Title</th>
    <th>Description</th>
    <th>Features</th>
    <th>Options</th>
    <th>Retail price</th>
    <th>Web price</th>
    <th>Image url</th>
    <th>Vendor</th>
    <th>Vendor sku</th>
    <th>Sammons category</th>
    <th>Sammons part number</th>
    <th>Sold in units</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.tms_part_number %></td>
    <td><%= product.category %></td>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.features %></td>
    <td><%= product.options %></td>
    <td><%= product.retail_price %></td>
    <td><%= product.web_price %></td>
    <td><%= product.image_url %></td>
    <td><%= product.vendor %></td>
    <td><%= product.vendor_sku %></td>
    <td><%= product.sammons_category %></td>
    <td><%= product.sammons_part_number %></td>
    <td><%= product.sold_in_units %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

